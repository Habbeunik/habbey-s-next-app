{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "jsx": "react",
    "lib": ["es5", "es6", "es7", "dom", "es2017"],
    "outDir": "build/lib",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "rootDir": "src",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveConstEnums": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "target": "esnext",
    "paths": {
      "app/*": ["./*"],
      "src/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "scripts"]
}
